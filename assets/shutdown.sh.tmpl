#!/bin/bash

# This command bash will stop the xdown windows service
# And then uninstall this service from operation system
# Configurations will be remained in directory c:/xdown on the disk.
# You can restart from those configurations in the near future.
#

./downloader service stop
PID=$(ps -eaf | grep '/usr/local/xdown' | grep -v grep | awk '{print $2}')
if [[ "" !=  "$PID" ]]; then
  echo "killing $PID"
  kill -9 "$PID"
fi

echo shutdown xdown successfully!